generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Comment {
  id        Int      @id @default(autoincrement())
  postId    Int
  text      String
  timestamp DateTime
  user      Int

  // Relations
  post      Post     @relation(fields: [postId], references: [id])
  userObj   User     @relation(fields: [user], references: [id])
}

model Post {
  id          Int      @id @default(autoincrement())
  contents    String
  isPublished Boolean
  timestamp   DateTime
  title       String
  user        Int

  // Relations
  userObj     User     @relation(fields: [user], references: [id])
  comments    Comment[]
}

model User {
  id       Int      @id @default(autoincrement())
  isAdmin  Boolean
  password String
  username String

  // Relations
  posts    Post[]
  comments Comment[]
}